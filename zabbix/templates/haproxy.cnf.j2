#---------------------------------------------------------------------
# Global settings
#---------------------------------------------------------------------
global
    log         127.0.0.1 local2
    chroot      /var/lib/haproxy
    pidfile     /var/run/haproxy.pid
    maxconn     4000
    user        haproxy
    group       haproxy
    daemon
    stats socket /var/lib/haproxy/stats
    ssl-default-bind-ciphers PROFILE=SYSTEM
    ssl-default-server-ciphers PROFILE=SYSTEM

#---------------------------------------------------------------------
# Default settings
#---------------------------------------------------------------------
defaults
    mode                    tcp
    log                     global
    option                  dontlognull
    option tcp-check
    retries                 3
    timeout connect         10s
    timeout client          1m
    timeout server          1m
    maxconn                 3000

#---------------------------------------------------------------------
# MySQL Galera backend (for Zabbix)
#---------------------------------------------------------------------
listen galera
    bind {{ keepalived_vip }}:3306
    mode tcp
    balance leastconn
    option tcpka
    option mysql-check user {{ haproxy_db_user }}
    server maria1 {{ hostvars['maria1']['ansible_host'] }}:3306 check weight 1
    server maria2 {{ hostvars['maria2']['ansible_host'] }}:3306 check weight 1
    server maria3 {{ hostvars['maria3']['ansible_host'] }}:3306 check weight 1
